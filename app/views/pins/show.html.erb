<%= link_to 'Back', pins_path, class: "btn btn-danger btn-large" %>

<div class="row">
  <div class="col-md-offset-4 col-md-8">
    <div class="panel panel-default pinit">
      <div class="panel-heading center pinit">
        <%= image_tag @pin.image.url(:medium), class: "bdr" %>
      </div>
      <div class="panel-body pinit">
        <p><%= @pin.description %></p>
        <p><strong><%= @pin.user.email if @pin.user %></strong></p>

        <% if @pin.user == current_user %>
         <%= link_to edit_pin_path(@pin) do %>
        <span class="glyphicon glyphicon-edit"></span>
         Edit
      <% end %>
        <% end %>

      </div>
    </div>
  </div>
</div>